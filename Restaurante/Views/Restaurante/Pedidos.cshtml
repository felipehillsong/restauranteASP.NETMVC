@model IEnumerable<Restaurante.Models.Pedido>
@{
    ViewData["Title"] = "Pedidos";
}

<h2>Pedidos</h2>


<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Produto</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pedido in Model) {
            <tr>
                <td>
                    @pedido.NomeProduto
                </td>
            </tr>
        }
    </tbody>

</table>
