@model IEnumerable<Restaurante.Models.Pedido>
@{
    ViewData["Title"] = "Pedidos Cozinha";
}

<h2>Pedidos</h2>


<table class="table table-dark">
    <tr>
        <th>Mesa do Cliente</th>
        <th>Nome do Cliente</th>
        <th>Pedidos</th>
        <th>Quantidade</th>
        <th>Horario</th>
    </tr>
    @if(Model != null){
    
    @foreach (var pedido in Model) {
    <tr>
        <td>@pedido.Mesa</td>
        <td>@pedido.Nome</td>
        <td>@pedido.Pratos <br>
            @pedido.Bebidas<br>
            @pedido.Sobremesas</td>
        <td>@pedido.QtdPratos  <br> 
            @pedido.QtdBebidas <br>     
            @pedido.QtdSobremesas</td>
        <td>@pedido.tempo</td>
        
        

    </tr>
    }
    }

</table>